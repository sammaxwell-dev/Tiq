{
  "manifest_version": 3,
  "name": "Tippr - AI Translator",
  "version": "0.0.1",
  "description": "Instant AI translation helper",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-Dx8r9zS1.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/assets/*.png",
        "assets/Button-n05jE9QT.js",
        "assets/ContentApp-BrPtLOrt.js",
        "assets/storage-CmcN9rvR.js",
        "assets/sparkles-BATY_21l.js",
        "assets/index.tsx-D-HgWGWC.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
