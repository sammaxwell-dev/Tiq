{
  "manifest_version": 3,
  "name": "Tippr - AI Translator",
  "version": "0.0.1",
  "description": "Instant AI translation helper",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-D5zkCvBC.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/assets/*.png",
        "assets/Button-Dlz1g6dN.js",
        "assets/ContentApp-CjhfxxL2.js",
        "assets/storage-CC_EQv24.js",
        "assets/sparkles-Du_GlSm1.js",
        "assets/index.tsx-CA4Nd7bQ.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
