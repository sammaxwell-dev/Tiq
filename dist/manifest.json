{
  "manifest_version": 3,
  "name": "Tippr - AI Translator",
  "version": "0.0.1",
  "description": "Instant AI translation helper",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-lssoX76c.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/assets/*.png",
        "assets/Select-DVHqK8Ie.js",
        "assets/ContentApp-Be4PkP3u.js",
        "assets/storage-CmcN9rvR.js",
        "assets/Loader-B7UvaqpD.js",
        "assets/index.tsx-CQHhKzKd.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
